@section title{
    @ViewBag.Title
}

@using ecm.Controllers

<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="~/pages/index">Home</a></li>
                <li><a href="~/pages/products">Category</a></li>
                <li class="active">Cart</li>
            </ul>
        </div>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7 col-xs-6 col-xxs-12 text-center-xs">
            <h1 class="section-title-inner"><span><i
                    class="glyphicon glyphicon-shopping-cart"></i> Shopping cart </span></h1>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar col-xs-6 col-xxs-12 text-center-xs">
            <h4 class="caps"><a href="~/pages/products"><i class="fa fa-chevron-left"></i> Back to shopping </a></h4>
        </div>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7">
            <div class="row userInfo">
                <div class="col-xs-12 col-sm-12">
                    <div class="cartContent w100">
                        <table class="cartTable table-responsive" style="width:100%">
                            <tbody>

                            <tr class="CartProduct cartTableHeader">
                                <td style="width:15%"> Product</td>
                                <td style="width:40%">Details</td>
                                <td style="width:10%" class="delete">&nbsp;</td>
                                <td style="width:10%">QNT</td>
                                <td style="width:15%">Total</td>
                            </tr>
                            @{double total = 0;}
                            @if (Session["cart"] != null)
                            {
                                foreach (var item in (List<Product>)Session["cart"])
                                {
                                    <tr class="CartProduct">
                                        <td class="CartProductThumb">
                                            <div>
                                                <a href="~/pages/productdetails/@item.Prod.Id"><img src="~/images/@item.Prod.photo1" /></a>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="CartDescription">
                                                <h4><a href="~/pages/productdetails/@item.Prod.Id">@item.Prod.description</a></h4>

                                                <div class="price"><span>$@item.Prod.unit_price</span></div>
                                            </div>
                                        </td>
                                        <td class="delete">
                                            <a title="Delete">
                                                <a href="~/Cart/Delete/@item.Prod.Id" class="btn btn-danger btn-sm"> <i class="glyphicon glyphicon-trash fa-2x"></i></a>
                                            </a>
                                        </td>
                                        <td class="price">@item.Quantity</td>
                                        <td class="price">$@(item.Prod.unit_price * @item.Quantity)</td>
                                        @{total += (item.Prod.unit_price * item.Quantity);}
                                    </tr>
                                 }
                            }
                            
                            

                            </tbody>
                        </table>
                    </div>
                    <!--cartContent-->

                    <div class="cartFooter w100">
                        <div class="box-footer">
                            <div class="pull-left"><a href="~/pages/products" class="btn btn-default"> <i
                                    class="fa fa-arrow-left"></i> &nbsp; Continue shopping </a></div>
                        </div>
                    </div>
                    <!--/ cartFooter -->

                </div>
            </div>
            <!--/row end-->

        </div>
        <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar">
            <div class="contentBox">
                <div class="w100 costDetails">
                    <div class="table-block" id="order-detail-content"><a class="btn btn-primary btn-lg btn-block "
                                                                          title="checkout" href="~/cart/checkoutbefore"
                                                                          style="margin-bottom:20px"> Proceed to
                        checkout &nbsp; <i class="fa fa-arrow-right"></i> </a>

                        <div class="w100 cartMiniTable">
                            <table id="cart-summary" class="std table">
                                <tbody>
                                <tr>
                                    <td>Total products</td>
                                    <td class="price">$216.51</td>
                                </tr>
                                <tr style="">
                                    <td>Shipping</td>
                                    <td class="price"><span class="success">Free shipping!</span></td>
                                </tr>
                                <tr class="cart-total-price ">
                                    <td>Total (tax excl.)</td>
                                    <td class="price">$216.51</td>
                                </tr>
                                <tr>
                                    <td>Total tax</td>
                                    <td class="price" id="total-tax">$0.00</td>
                                </tr>
                                <tr>
                                    <td> Total</td>
                                    <td class=" site-color" id="total-price">$@total</td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <div class="input-append couponForm">
                                            <input class="col-lg-8" id="appendedInputButton" type="text"
                                                   placeholder="Coupon code">
                                            <button class="col-lg-4 btn btn-success" type="button">Apply!</button>
                                        </div>
                                    </td>
                                </tr>
                                </tbody>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End popular -->

        </div>
        <!--/rightSidebar-->

    </div>
    <!--/row-->

    <div style="clear:both"></div>
</div>
<!-- /.main-container -->

<div class="gap"></div>
